<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <!-- Dummy Adapter Component Bean -->
  <bean id="dummy-adapter" class="com.apsaraconsulting.adapter.DummyAdapterComponent" />

  <!-- Component Resolver Service -->
  <service ref="dummyAdapterComponentResolver" interface="org.apache.camel.spi.ComponentResolver">
    <service-properties>
      <entry key="component" value="dummy-adapter"/>
    </service-properties>
  </service>

  <bean id="dummyAdapterComponentResolver" class="com.apsaraconsulting.adapter.DummyAdapterComponentResolver" />

</blueprint>